<layout version="0.1.0">
    
    <customer_account>
        <!-- Mage_Sales -->
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="level3">
                <name>level3_cards</name>
                <path>level3/cc</path>
                <label>Manage Payment Methods</label>
            </action>
        </reference>
    </customer_account>
    <level3_cc_index>
        <update handle="customer_account" />
        <reference name="my.account.wrapper">
            <block type="level3/account_cards" name="cards" template="level3/cards.phtml"/>
        </reference>
    </level3_cc_index>
    
    <level3_cc_edit>
        <update handle="customer_account" />
        <reference name="my.account.wrapper">
            <block type="level3/account_card_edit" name="cards" template="level3/card/edit.phtml"/>
        </reference>
    </level3_cc_edit>
    
</layout>